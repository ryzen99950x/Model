            <a class="nav-link accounting" asp-area="Identity" asp-page="/Account/Logout">
                <img class="img-fluid img-100" src="~/img/logout.svg" alt="lgout">
            </a>
    </li>
        <a class="navbar-brand" href="~/Users/Edit/@UserManager.GetUserId(User)">
