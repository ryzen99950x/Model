                <button type="submit" class="nav-link btn btn-link text-dark">@User.Identity?.Name 様</button>
            </form>
            <div class="ml-auto">
                <a class="nav-link accounting" asp-area="Identity" asp-page="/View/Home/index">
                    <img class="img-fluid img-100 img" src="~/img/account.svg" alt="Account">
                </a>
            </div>
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"></a>
        </li>
    <li class="nav-item">
        <a  class="form-inline text-black" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
