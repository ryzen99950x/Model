<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoppingSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoppingSite.styles.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            position: relative;
            transition: all 2s ease-in-out; 
        }

            .navbar-brand.small {
                transform: scale(0.5);
            }

        .header {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1;
        }

        .container-fluid.small {
            max-height: 200px;
        }
        }

        .navbar-brand:hover img {
            opacity: 0.8;
        }
        /* h1 タグのアニメーション */
        h1 {
            transition: all 2s ease-in-out; 
        }

            h1.small {
                transform: scale(8);
                font-size: 5px;
            }
    </style>

</head>
<body>
    <header class="header">
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" href="~/home">
                    <img class="img-fluid img-50" src="~/img/logo2.svg" alt="Logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- h1 タグを追加 -->
                <div class="container-fluids">
                    <h1>Gallantiglow</h1>
                </div>
                <div class="d-flex justify-content-end">
                    <div class="p-2">
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <!-- ログインパーシャルビューを追加 -->
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </div>
                
            </div>
        </nav>
    </header>
    <script>
        window.onscroll = function () {
            const navbarBrand = document.querySelector('.navbar-brand');
            const header = document.querySelector('.container-fluid');
            const h1 = document.querySelector('h1');

            // Calculate scroll position
            const scrollPosition = window.scrollY || document.documentElement.scrollTop;

            // Add or remove 'small' class based on scroll position
            if (scrollPosition > 100) {
                navbarBrand.classList.add('small');
                header.classList.add('small');
                h1.classList.add('small');
            } else {
                navbarBrand.classList.remove('small');
                header.classList.remove('small');
                h1.classList.remove('small');
            }
        };
    </script>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ShoppingSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
